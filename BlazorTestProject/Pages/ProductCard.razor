@code {
    
    private string productName = "Book";
    private int productQuantity = 11;
    private double productPrice = 24.69;

    private void BuyAction(){
        //Place Holder Code
        Console.WriteLine("Activated Buy Action!");
        productQuantity--;
    }

    private void SellAction(){
        //Place Holder Code
        Console.WriteLine("Activated Sell Action!");
        productQuantity++;
    }

}
