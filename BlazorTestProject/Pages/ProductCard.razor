@page "/ProductCard"

<PageTitle>ProductCard</PageTitle>

<div class="col-md-4">
    <div class="card mb-4 box-shadow">
        <img class="card-img-top" data-src="holder.js/100px100?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" src="https://upload.wikimedia.org/wikipedia/commons/f/f9/Phoenicopterus_ruber_in_S%C3%A3o_Paulo_Zoo.jpg" data-holder-rendered="true" style="height: 225px; width: 100%; display: block;">
        <div class="card-body">
            <div  class="text-center"> <strong>@productName</strong> </div>

            <div class="row"> 
                <div class="col">Price: <p role="status">@productPrice</p></div>
                <div class="col">Quantity: <p role="status">@productQuantity</p></div>
            </div>

            <div class="text-center"> 
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="BuyAction">Buy</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="SellAction">Sell</button>
                </div>
            </div>

        </div>
    </div>
</div>

